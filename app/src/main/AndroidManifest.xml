<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="first.alexander.com.androidvolleyparser">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".JSONVolleyController"
        android:allowBackup="true"
        android:icon="@drawable/online_shop"
        android:label="@string/app_name"
        android:roundIcon="@drawable/online_shop"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".CustomerDetailsActivity"
            android:label="Customer Information" />

        <activity
            android:name=".ItemInfoActivity"
            android:label=" Item Stats Information"
            android:screenOrientation="portrait" />

        <activity
            android:name=".CustomerActivity"
            android:label="Customer Information" />

    </application>

</manifest>