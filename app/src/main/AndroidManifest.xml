<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="first.alexander.com.androidvolleyparser">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".JSONVolleyController"
        android:allowBackup="true"
        android:icon="@drawable/bag"
        android:label="JSON Order Parser"
        android:roundIcon="@drawable/bag"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="JSON Order Parser"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CustomerDetailsActivity" />

        <activity android:name=".ItemInfoActivity"
            android:screenOrientation="portrait"
            android:label="Item Stats Information"></activity>

        <activity
            android:name=".CustomerActivity"
            android:icon="@drawable/customer"
            android:label="Customer Information" />

    </application>

</manifest>