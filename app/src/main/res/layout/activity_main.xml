<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="380dp"
        android:layout_height="130dp"
        android:id="@+id/relativeLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">

        <ImageButton
            android:id="@+id/imageButtonCustomerInfo"
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:srcCompat="@drawable/customer"
            android:layout_marginEnd="21dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:id="@+id/imageButtonItemInfo"
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:srcCompat="@drawable/box"
            android:layout_marginStart="21dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="21dp"
        android:textAlignment="center"
        android:text="Dashboard"
        android:textSize="40dp"
        android:fontFamily="sans-serif-condensed"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="390dp"
        android:layout_height="140dp"
        android:id="@+id/relativeLayout2"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true">


        <TextView
            android:id="@+id/textViewTotalNumItems"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginStart="13dp"
            android:textSize="15dp"
            android:fontFamily="monospace"
            android:textAlignment="center"
            android:layout_alignBaseline="@+id/textViewTotalPriceAmount"
            android:layout_alignBottom="@+id/textViewTotalPriceAmount"
            android:layout_alignStart="@+id/textViewItemNum" />

        <TextView
            android:id="@+id/textViewTotalPriceAmount"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginEnd="59dp"
            android:textSize="15dp"
            android:fontFamily="monospace"
            android:textAlignment="center"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />


        <TextView
            android:id="@+id/textViewItemNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of Item Sold"
            android:layout_marginTop="11dp"
            android:layout_below="@+id/textViewTotalNumItems"
            android:layout_alignParentStart="true"
            android:layout_marginStart="46dp" />

        <TextView
            android:id="@+id/textViewTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Price Amount"
            android:layout_alignBaseline="@+id/textViewItemNum"
            android:layout_alignBottom="@+id/textViewItemNum"
            android:layout_alignStart="@+id/textViewTotalPriceAmount" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="390dp"
        android:layout_height="160dp"
        android:layout_below="@+id/relativeLayout2"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/btn_star_big_on"
            android:layout_alignTop="@+id/textView6"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/btn_star_big_on"
            android:layout_alignBottom="@+id/textView6"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favourite Customer of The Day"
            android:textSize="27dp"
            android:fontFamily="cursive"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp" />

        <TextView
            android:id="@+id/textViewFavouriteCustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize='23dp'
            android:fontFamily="monospace"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>




</RelativeLayout>